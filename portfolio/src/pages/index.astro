---
import { getCollection } from 'astro:content';

const projects = await getCollection("projects", ({data}) => data.published !== false);

projects.sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA; // newest first
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Justin Wu · Project Portfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light dark;
        --bg: #0f172a;
        --surface: #ffffff;
        --surface-subtle: #f1f5f9;
        --text: #0f172a;
        --text-muted: #475569;
        --primary: #2563eb;
        --accent: #14b8a6;
        --radius-lg: 22px;
        --radius-md: 16px;
        --shadow-lg: 0 25px 60px rgba(15, 23, 42, 0.15);
        --shadow-md: 0 16px 40px rgba(15, 23, 42, 0.12);
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      }

      body {
        margin: 0;
        background: linear-gradient(150deg, #0f172a 0%, #1e293b 45%, #0f172a 100%);
        color: var(--text);
        min-height: 100vh;
      }

      header {
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(16px);
        background: rgba(15, 23, 42, 0.75);
        color: #fff;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      }

      .header-inner {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem clamp(1.5rem, 5vw, 3rem);
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.85rem;
      }

      .brand-mark {
        width: 46px;
        height: 46px;
        display: grid;
        place-items: center;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        box-shadow: 0 15px 35px rgba(37, 99, 235, 0.3);
        font-weight: 700;
      }

      nav {
        display: flex;
        gap: 1.5rem;
      }

      nav a {
        text-decoration: none;
        color: rgba(255, 255, 255, 0.82);
        font-weight: 500;
        transition: color 0.2s ease;
      }

      nav a:hover {
        color: #fff;
      }

      main {
        max-width: 1100px;
        margin: clamp(3rem, 7vw, 5rem) auto;
        padding: 0 clamp(1.5rem, 5vw, 3rem) clamp(4rem, 10vw, 6rem);
      }

      .intro {
        text-align: center;
        color: #fff;
        margin-bottom: clamp(3rem, 8vw, 4rem);
      }

      .intro h1 {
        font-size: clamp(2.6rem, 5vw, 3.6rem);
        margin-bottom: 0.75rem;
      }

      .intro p {
        color: rgba(255, 255, 255, 0.82);
        max-width: 680px;
        margin: 0 auto;
        line-height: 1.7;
      }

      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: clamp(1.5rem, 4vw, 2.5rem);
      }

      .card {
        background: var(--surface);
        border-radius: var(--radius-lg);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        box-shadow: var(--shadow-md);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
      }

      .card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-lg);
      }

      .cover {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
      }

      .card-body {
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 1.1rem;
      }

      .card-body h2 {
        margin: 0;
        font-size: 1.4rem;
      }

      .summary {
        color: var(--text-muted);
        line-height: 1.6;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .tag {
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        background: var(--surface-subtle);
        color: var(--primary);
      }

      .actions {
        margin-top: auto;
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
      }

      .button {
        flex: 1 1 120px;
        padding: 0.7rem 1.1rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: background 0.2s ease;
      }

      .button.demo {
        background: var(--primary);
        color: #fff;
      }

      .button.demo:hover {
        background: var(--primary);
        filter: brightness(1.05);
      }

      .button.code {
        background: rgba(37, 99, 235, 0.12);
        color: var(--primary);
      }

      .button.code:hover {
        background: rgba(37, 99, 235, 0.2);
      }

      @media (max-width: 640px) {
        nav {
          display: none;
        }
        .header-inner {
          flex-direction: column;
          gap: 1rem;
        }
        .button {
          flex: 1 1 100%;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header-inner">
        <div class="brand">
          <div class="brand-mark">JW</div>
          <div>
            <div style="font-weight:700;">Justin Wu</div>
            <div style="font-size:0.85rem; opacity:0.75;">Engineering · Product · Vision</div>
          </div>
        </div>
        <nav>
          <a href="#projects">Projects</a>
          <a href="/about">About</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    <main>
      <section class="intro">
        <p class="eyebrow">Selected Work</p>
        <h1>Modern systems for vision, commerce & accessibility</h1>
        <p>
          A curated collection of industry-ready builds. Each project is documented, tested, and ships with
          deployment playbooks—so teams can move from prototype to production without friction.
        </p>
      </section>

      <section class="projects-grid" id="projects">
        {projects.length === 0 ? (
          <p style="color: rgba(255,255,255,0.75); grid-column: 1 / -1; text-align: center;">
            No projects published yet. Add Markdown files to <code>src/content/projects</code> to populate this page.
          </p>
        ) : (
          projects.map((project) => {
            const { title, summary, cover, tags, links } = project.data;
            return (
              <article class="card" key={project.id}>
                {cover && <img class="cover" src={cover} alt={`Cover image for ${title}`} loading="lazy" />}
                <div class="card-body">
                  <h2>{title}</h2>
                  <p class="summary">{summary}</p>
                  {tags?.length ? (
                    <div class="tags">
                      {tags.map((tag) => (
                        <span class="tag" key={tag}>{tag}</span>
                      ))}
                    </div>
                  ) : null}
                  <div class="actions">
                    {links?.demo && (
                      <a class="button demo" href={links.demo} target="_blank" rel="noopener">View Demo</a>
                    )}
                    {links?.code && (
                      <a class="button code" href={links.code} target="_blank" rel="noopener">View Code</a>
                    )}
                  </div>
                </div>
              </article>
            );
          })
        )}
      </section>
    </main>
  </body>
</html>
